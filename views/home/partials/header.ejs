<header class="header1">
    <!-- Header desktop -->
    <div class="container-menu-header">
        <div class="topbar">
            <div class="topbar-social">
                <a href="#" class="topbar-social-item fab fa-facebook"></a>
                <a href="#" class="topbar-social-item fab fa-instagram"></a>
                <a href="#" class="topbar-social-item fab fa-snapchat-ghost"></a>
                <a href="#" class="topbar-social-item fab fa-youtube"></a>
            </div>

            <span class="topbar-child1">
                Free shipping for standard order over $100
            </span>

            <div class="topbar-child2">
                <span class="topbar-email">
                    giaydantuongthuydien@gmail.com
                </span>
            </div>
            
        </div>

        <div class="wrap_header">
            <!-- Logo -->
            <a href="/" class="logo">
                <img src="/images/icons/logo1.jpg" alt="IMG-LOGO">
            </a>

            <!-- Menu -->
            <div class="wrap_menu">
                <nav class="menu">
                    <ul class="main_menu">
                        <li>
                            <a href="/">Home</a>
                         </li>

                        <li>
                            <a href="/products?pageNum=1&size=12">Shop</a>
                        </li>

                        <li class="sale-noti">
                            <a href="/products/onSale?pageNum=1&size=12">Sale <i class="fas fa-fire-alt" color="red"></i></a>
                        </li>

                        <li>
                            <a href="/#features">Features</a>
                        </li>

                        <li>
                            <a href="/blog">Blog</a>
                        </li>

                        <li>
                            <a href="/about">About</a>
                        </li>

                        <li>
                            <a href="/contact">Contact</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Header Icon -->
            <div class="header-icons">
                <% if (!user) { %>
                    <a href="/users/login" class="header-wrapicon1 dis-block">
                        <img src="/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                    </a>
                <% } else { %>
                    <div class="dropdown">
                        <button class="btn shadow p-0 bg-white rounded dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="d-block">
                                Hello, <%= user.name %>
                            </span>
                            <span class="d-block">
                                <h6>Account & List</h6>
                            </span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <% if(user.role.includes('Admin') || user.role.includes('Employee')) { %>
                                <a class="dropdown-item" href="/admin">Admin Dashboard</a>
                            <% } %>
                            <a class="dropdown-item" href="/users/account">Your Account</a>
                            <a class="dropdown-item" href="/users/orders">Your Orders</a>
                            <a class="dropdown-item" href="/users/changePassword">Change Your Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/users/logout">Log Out</a>
                        </div>
                    </div>
                <% } %>
                <span class="linedivide1"></span>

                <div class="header-wrapicon2">
                    <a href="/cart/viewCart">
                        <img src="/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                        <% if (session.cart) { %>
                        <span class="header-icons-noti"> <%= session.cart.totalQty %></span>
                        <% } else { %>
                        <span class="header-icons-noti">0</span>
                        <% } %>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap_header_mobile">
        <!-- Logo moblie -->
        <a href="/" class="logo-mobile">
            <img src="/images/icons/logo1.jpg" alt="IMG-LOGO">
        </a>

        <!-- Button show menu -->
        <div class="btn-show-menu">
            <!-- Header Icon mobile -->
            <div class="header-icons-mobile">
                <span class="linedivide2"></span>
                <a href="/cart/viewCart">
                    <div class="header-wrapicon2">
                        <img src="/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                        <% if (session.cart) { %>
                            <span class="header-icons-noti"> <%= session.cart.totalQty %></span>
                        <% } else { %>
                            <span class="header-icons-noti">0</span>
                        <% } %>
                    </div>
                </a>
               
            </div>

            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>
    </div>

    <!-- Menu Mobile -->
    <div class="wrap-side-menu" >
        <nav class="side-menu">
            <ul class="main-menu">
                <li class="item-topbar-mobile p-l-20 p-t-8 p-b-8">
                    <span class="topbar-child1">
                        Free shipping for standard order over $100
                    </span>
                </li>

                <li class="item-topbar-mobile p-l-20 p-t-8 p-b-8">
                    <div class="topbar-child2-mobile">
                        <span class="topbar-email">
                            info@example.com
                        </span>

                        <div class="topbar-language rs1-select2">
                            <select class="selection-1" name="time">
                                <option>USD</option>
                                <option>EUR</option>
                            </select>
                        </div>
                    </div>
                </li>

                <li class="item-topbar-mobile p-l-10">
                    <div class="topbar-social-mobile">
                        <a href="#" class="topbar-social-item fab fa-facebook"></a>
                        <a href="#" class="topbar-social-item fab fa-instagram"></a>
                        <a href="#" class="topbar-social-item fab fa-snapchat-ghost"></a>
                        <a href="#" class="topbar-social-item fab fa-youtube-play"></a>
                    </div>
                </li>

                <li class="item-menu-mobile">
                    <a href="/">Home</a>
                    <i class="arrow-main-menu fa fa-angle-right" aria-hidden="true"></i>
                </li>

                <li class="item-menu-mobile">
                    <a href="/products?pageNum=1&size=12">Shop</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="/products/onSale?pageNum=1&size=12">Sale</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="/#features">Features</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="/blog">Blog</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="/about">About</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="/contact">Contact</a>
                </li>

                <li class="item-menu-mobile">
                    <% if (!user) { %>
                        <a href="/users/login">Login</a>
                    <% } else { %>
                        <div class="dropdown">
                            <button  style="background-color: transparent" class="btn shadow p-0 bg-white rounded dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="d-block">
                                    <h6>My Account & List</h6>
                                </span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <% if(user.role.includes('Admin') || user.role.includes('Employee')) { %>
                                    <a class="dropdown-item" href="/admin">Admin Dashboard</a>
                                <% } %>
                                <a class="dropdown-item" href="/users/account">Your Account</a>
                                <a class="dropdown-item" href="/users/orders">Your Orders</a>
                                <a class="dropdown-item" href="/users/changePassword">Change Your Password</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/users/logout">Log Out</a>
                            </div>
                        </div>
                    <% } %>
                </li>

            </ul>
        </nav>
    </div>
</header>
