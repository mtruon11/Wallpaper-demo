<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body mx-5" style="background-color:whitesmoke">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Login</h1>
      <% include ../partials/messages %>
        <div class="login-box-content" style="background-color: whitesmoke">
            <div class="fb-login box-shadow">
              <a class="d-flex flex-row align-items-center social-login-link" href="/auth/facebook">
                <i class="fab fa-facebook-f" style="margin-left:0px;padding-right:20px;padding-left:22px;width:56px;">
                </i>Login with Facebook
              </a>
            </div>
            <div class="gp-login box-shadow">
              <a class="d-flex flex-row align-items-center social-login-link" href="/auth/google" style="margin-bottom:10px;">
                <i class="fab fa-google" style="color:rgb(255,255,255);width:56px;">
                </i>Login with Google+
              </a>
            </div>
        </div>
      <hr/>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Password"
          />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        Don't you have an account? <a href="/users/register">Register Now!</a>
      </p>
    </div>
  </div>
</div>
    