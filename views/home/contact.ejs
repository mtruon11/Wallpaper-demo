<% include ./partials/header %>

<!-- Title Page -->
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/images/heading-pages-06.jpg);">
    <h2 class="l-text2 t-center">
        Liên Hệ
    </h2>
</section>

<section class="bg-white p-6">
    <div class="container-fluid m-l-20 m-r-20 m-t-20 m-b-20">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-lg-5 m-t-50 m-b-50 m-l-50 m-r-50"><iframe width="100%" height="450" frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJKYVlSo3Jt4kRM2VrbIpJnOQ&key=AIzaSyAwTsbTAPKsU4X3How8AGyEOh69BbN9U7w" allowfullscreen></iframe>
            </div>
            <div class="col-sm-12 col-md-10 col-lg-5 m-t-50 m-b-50 m-l-50 m-r-50">
                <form class="leave-comment" width="100%">
                    <h4 class="m-text26 p-b-36 p-t-15">
                        Gửi tin nhắn
                    </h4>

                    <div class="bo4 of-hidden size15 m-b-20">
                        <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="name" placeholder="Họ tên">
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="phone-number" placeholder="Số điện thoại">
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="email" placeholder="Địa chỉ email">
                    </div>

                    <textarea class="dis-block s-text7 size20 bo4 p-l-22 p-r-22 p-t-13 m-b-20" name="message" placeholder="Tin nhắn"></textarea>

                    <div class="w-size25">
                        <!-- Button -->
                        <button class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4">
                            Gửi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

