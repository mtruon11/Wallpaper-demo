<div id="wrapper">

    <% include ./sidebar-wrapper %>

    <div class="page-content-wrapper">
        
        <% include ./header %>
        
        <!-- Add User form -->
        <div class="container-fluid table-responsive">
            <table class="table table-light table-striped table-bordered mx-8 my-8">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">Role</th>
                        <th scope="col">Added On</th>
                        <th scope="col">Action</th>
                    </tr>

                    <tbody>
                        <% doc.forEach(function(doc) { %>
                            <tr class="mw-100 p-3">
                                <td class="h-50 mx-auto my-auto">
                                    <img src="<%= doc.imageUrl %>" alt="Image" class="img-fluid img-thumbnail rounded" width="100px"/>
                                </td>
                                <td><%= doc.name %></td>
                                <td><%= doc.email %></td>
                                <td><%= doc.phone %></td>
                                <td><%= doc.address %></td>
                                <td><%= doc.role %></td>
                                <td><%= doc.createdOn.toDateString() %></td>
                                <td>
                                    <a doc-toggle="tooltip" doc-placement="top" title="Edit" href="<%= link + doc.email %>" >
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a doc-toggle="tooltip" doc-placement="top" title="Delete" href="<%= link + doc.email + '?_method=DELETE' %>" onclick="return confirm('Are you sure?')">
                                        <i class="fas fa-trash-alt" style="color:red"></i>
                                    </a> 
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>

                </thead>
            </table>
        </div>
        
    </div>

</div>
