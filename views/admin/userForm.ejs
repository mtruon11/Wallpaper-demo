<div id="wrapper">

    <% include ./sidebar-wrapper %>

    <div class="page-content-wrapper">
        
        <% include ./header %>

        <!-- Add product form -->
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-md-10 col-sm-12" style="border-radius: 15px; background-color: lightgray">
                    <div class="block mx-4 my-4">
                        
                        <div class="mx-4 my-4 block-title">
                            <h2>
                                <i class="fa fa-plus"></i>
                                <strong> Add </strong> New User
                            </h2>
                        </div>
                        <div class="block-form">
                            <% include ../partials/messages %>
                            <form action="/admin/users/addUser" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-md-auto control-label" for="name"><b>Name</b></label>
                                    <div class="col-md-auto">
                                        <input 
                                            class="form-control text-box"
                                            type="name"
                                            id="name"
                                            name="name"
                                            placeholder="Enter name..."
                                        />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-auto control-label" for="email"><b>Email</b></label>
                                    <div class="col-md-auto">
                                        <input 
                                            class="form-control text-box"
                                            type="email"
                                            id="email"
                                            name="email"
                                            placeholder="Enter email..."
                                        />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-auto control-label" for="password"><b>Password</b></label>
                                    <div class="col-md-auto">
                                        <input 
                                            class="form-control text-box"
                                            type="password"
                                            id="password"
                                            name="password"
                                            placeholder="Enter password..."
                                        />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-auto control-label" for="role"><b>Role</b></label>
                                    <div class="col-md-auto">
                                        <select class="select-chosen text-box" id="role" name="role" multiple>
                                            <option value="role1">Role 1</option>
                                            <option value="role2">Role 2</option>
                                            <option value="role3">Role 3</option>
                                            <option value="role4">Role 4</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-auto control-label" for="image"><i class="fa fa-picture-o"></i><b>Upload Your Photo</b></label>
                                    <div class="col-md-auto">
                                        <input 
                                        type="file" 
                                        name="image" 
                                        id="image" 
                                        class="form-control text-box" 
                                        >
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-md-auto">
                                        <button type="submit" class="btn btn-sm btn-primary p-2 mr-2">
                                            <i class="fa fa-floppy-o"></i>
                                            Save
                                        </button>
                                        <button type="reset" class="btn btn-sm btn-warning p-2 mr-2">
                                            <i class="fa fa-repeat"></i>
                                            Reset
                                        </button>
                                    </div>
                                    
                                </div>
                                
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</div>
